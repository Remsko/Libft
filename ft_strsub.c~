#include "libft.h"
#include <stdio.h>

char	*ft_strsub(char const *s, unsigned int start, size_t len)
{
	size_t	i;
	char	*str;

	i = (size_t)start;
	if (!(str = (char*)malloc(sizeof(*str) * (len + 1))))
		return (NULL);
	while (i < ((size_t)start + len))
	{
		printf("%s", "fesse");
		str[i] = ((char*)s)[(size_t)start + i];
		i++;
		printf("%s", "i");
	}
	return (str);
}

int		main(void)
{
	printf("%s", ft_strsub("grostroncon", 2, 8));
	return (0);
}
